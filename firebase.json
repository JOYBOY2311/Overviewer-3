
{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
     "rewrites": [
      {
        "source": "/api/parseSheet", // Using specific API path
        "function": "parseSheet"
      },
      {
        "source": "/api/detectHeaders", // Using specific API path
        "function": "detectHeaders"
      },
       {
         "source": "**",
         "destination": "/index.html"
       }
    ]
  }
}
